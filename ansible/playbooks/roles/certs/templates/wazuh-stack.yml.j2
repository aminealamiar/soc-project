version: "3.9"

services:
  wazuh-manager:
    image: wazuh/wazuh-manager:4.10.3
    ports:
      - "1514:1514/udp"
      - "1515:1515"
      - "55000:55000"
    secrets:
      - source: root-ca.pem
        target: /etc/wazuh-manager/certs/root-ca.pem
        uid: "999"
        gid: "999"
        mode: 0400
      - source: wazuh.manager.pem
        target: /etc/wazuh-manager/certs/manager.pem
        uid: "999"
        gid: "999"
        mode: 0400
      - source: wazuh.manager-key.pem
        target: /etc/wazuh-manager/certs/manager-key.pem
        uid: "999"
        gid: "999"
        mode: 0400
    environment:
      - INDEXER_URL=https://wazuh-indexer:9200
      - API_USERNAME=wazuh-wui
      - API_PASSWORD=MyS3cr37P450r.*-
      - WAZUH_MANAGER_CERT=/etc/wazuh-manager/certs/manager.pem
      - WAZUH_MANAGER_KEY=/etc/wazuh-manager/certs/manager-key.pem
      - WAZUH_CA_CERT=/etc/wazuh-manager/certs/root-ca.pem
    depends_on:
      - wazuh-indexer
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == manager]

  wazuh-indexer:
    image: wazuh/wazuh-indexer:5.0.0
    ports:
      - "9200:9200"
    # Set directory permissions and start indexer
    # Debug mode: Override command to sleep for debugging
    # Alternative: Override entrypoint if needed
    # entrypoint: ["sleep", "infinity"]
    secrets:
      - source: root-ca.pem
        target: /usr/share/wazuh-indexer/config/certs/root-ca.pem
        uid: "1000"
        gid: "1000"
        mode: 0400
      - source: wazuh.indexer.pem
        target: /usr/share/wazuh-indexer/config/certs/indexer.pem
        uid: "1000"
        gid: "1000"
        mode: 0400
      - source: wazuh.indexer-key.pem
        target: /usr/share/wazuh-indexer/config/certs/indexer-key.pem
        uid: "1000"
        gid: "1000"
        mode: 0400
    environment:
      - OPENSEARCH_JAVA_OPTS=-Xms1g -Xmx1g
      - bootstrap.memory_lock=true
      - discovery.type=single-node
      - java.security.manager=allow
      - network.host=0.0.0.0
      - INDEXER_CERT=/usr/share/wazuh-indexer/config/certs/indexer.pem
      - INDEXER_KEY=/usr/share/wazuh-indexer/config/certs/indexer-key.pem
      - CA_CERT=/usr/share/wazuh-indexer/config/certs/root-ca.pem
    ulimits:
      memlock:
        soft: -1
        hard: -1
      nofile:
        soft: 65536
        hard: 65536
    deploy:
      replicas: 1

  wazuh-dashboard:
    image: wazuh/wazuh-dashboard:4.10.3
    ports:
      - "5601:5601"
    secrets:
      - source: root-ca.pem
        target: /etc/wazuh-dashboard/certs/root-ca.pem
        uid: "1000"
        gid: "1000"
        mode: 0400
      - source: wazuh.dashboard.pem
        target: /etc/wazuh-dashboard/certs/dashboard.pem
        uid: "1000"
        gid: "1000"
        mode: 0400
      - source: wazuh.dashboard-key.pem
        target: /etc/wazuh-dashboard/certs/dashboard-key.pem
        uid: "1000"
        gid: "1000"
        mode: 0400
    environment:
      - OPENSEARCH_HOSTS=https://wazuh-indexer:9200
      - WAZUH_API_URL=https://wazuh-manager
      - API_USERNAME=wazuh-wui
      - API_PASSWORD=MyS3cr37P450r.*-
      - DASHBOARD_CERT=/etc/wazuh-dashboard/certs/dashboard.pem
      - DASHBOARD_KEY=/etc/wazuh-dashboard/certs/dashboard-key.pem
      - CA_CERT=/etc/wazuh-dashboard/certs/root-ca.pem
    depends_on:
      - wazuh-indexer
      - wazuh-manager
    deploy:
      replicas: 1

secrets:
  root-ca.pem:
    external: true
  wazuh.manager.pem:
    external: true
  wazuh.manager-key.pem:
    external: true
  wazuh.indexer.pem:
    external: true
  wazuh.indexer-key.pem:
    external: true
  wazuh.dashboard.pem:
    external: true
  wazuh.dashboard-key.pem:
    external: true
