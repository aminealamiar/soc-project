version: '3'

services:
  generator:
    image: wazuh/wazuh-certs-generator:0.0.2
    hostname: wazuh-certs-generator
    volumes:
      - /home/{{ ansible_user }}/config/wazuh_indexer_ssl_certs/:/certificates/
      - /home/{{ ansible_user }}/config/certs.yml:/config/certs.yml